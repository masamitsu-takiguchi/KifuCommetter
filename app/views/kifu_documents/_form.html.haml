= form_for @kifu_document do |f|
  -if @kifu_document.errors.any?
    #error_explanation
      %h2= "#{pluralize(@kifu_document.errors.count, "error")} prohibited this kifu_document from being saved:"
      %ul
        - @kifu_document.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :kifu_documents
    = f.text_field :kifu_documents
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :kifu
    = f.text_area :kifu
  .field
    = f.label :uploaded_by
    = f.text_field :uploaded_by
  .field
    = f.label :categories
    = f.text_field :categories
  .actions
    = f.submit 'Save'
